<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Medonyst</title>
    <link rel="stylesheet" href="/css/navbar/navbar.css">
    <link rel="stylesheet" href="/css/reminder/reminder.css">
    <link rel="stylesheet" href="/css/reminder/modal.css">
    <script src="https://kit.fontawesome.com/4e9a685ceb.js" crossorigin="anonymous"></script>
    <script src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/jqueryui/1.12.1/jquery-ui.min.css" integrity="sha512-aOG0c6nPNzGk+5zjwyJaoRUgCdOrfSDhmMID2u4+OIslr0GjpLKo7Xm0Ao3xmpM4T8AmIouRkqwj1nrdVsLKEQ==" crossorigin="anonymous" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jqueryui/1.12.1/jquery-ui.min.js" integrity="sha512-uto9mlQzrs59VwILcLiRYeLKPPbS/bT71da/OEBYEwcdNUk8jYIy+D176RYoop1Da+f9mvkYrmj5MCLZWEtQuA==" crossorigin="anonymous"></script>
</head>

<body>
    <!-- Sidepanel -->
    <div id="mySidepanel" class="sidepanel">
        <div class="blue">
            <h1>Menu</h1>
        </div>
        <a href="/">Home</a>
        <a href="/recommendation">Medicines</a>
        <a href="/reminder">Reminders</a>
        <a href="/record">Records</a>
        <!-- <a href="/doctor">Doctors</a> -->
        <a href="/about">About Us</a>
    </div>

    <!-- Navbar -->
    <nav class="navbar">
        <button class="openbtn" onclick="openNav()">
            <input id="ham" type="checkbox" />
            <span></span>
            <span></span>
            <span></span>
        </button>
        <a href="/" id="logo">
            <h1>MEDONYST</h1>
        </a>
        <a class="navLink" href="#">
            <img src="/images/bell.svg" alt="">
        </a>
        <a class="navLink" href="#">
            <img src="/images/user.svg" alt="">
        </a>
    </nav>

    <!-- Navigation Buttons -->
    <div class="appNav">
        <a href="/recommendation">
            <div class="appNavBtn medicine">
                <img src="/images/medicine.png" alt="">
                <h1>Medicines</h1>
                <p>Get medicine </p>
            </div>
        </a>
        <a href="/reminder">
            <div class="appNavBtn reminder active">
                <img src="/images/Reminder.png" alt="">
                <h1>Reminders</h1>
                <p>Set medicine <br> reminders</p>
            </div>
        </a>
        <a href="/record">
            <div class="appNavBtn record">
                <img src="/images/Record.png" alt="">
                <h1>Records</h1>
                <p>Upload your <br> medical records</p>
            </div>
        </a>
    </div>

    <div class="container">
        <div class="back">
            <a href="/">
                <h1>Back</h1>
            </a>
        </div>
        <% if(errorMessage.length > 0){%>
            <h2 style="color: red; text-align: center;">
                <%= errorMessage %>
            </h2>
            <%}%>
                <div class="addRemBtn">
                    <button id="myBtn">+ ADD REMINDER</button>
                </div>
                <div class="reminderWrappper">
                    <% if(morning.length > 0) {%>
                        <div class="reminder yellow">
                            <div class="pills">
                                <img src="/images/pills.png" alt="">
                            </div>
                            <div class="meds">
                                <div class="medTtileTime">
                                    <h1>Morning</h1>
                                    <i class="fas fa-times" id="morningClose"></i>
                                </div>
                                <div class="medsWrapper">
                                    <% morning.forEach(e =>{%>
                                        <div class="med">
                                            <h1 id="medName">
                                                <%= e.name %>
                                            </h1>
                                            <h1 id="medTime">
                                                <%= (e.beforeFood)?'07:00':'09:00' %>
                                            </h1>
                                        </div>
                                        <%})%>
                                </div>
                            </div>
                        </div>
                        <% } %>
                            <% if(afternoon.length > 0){%>
                                <div class="reminder brown">
                                    <div class="pills">
                                        <img src="/images/pills.png" alt="">
                                    </div>
                                    <div class="meds">
                                        <div class="medTtileTime">
                                            <h1>Afternoon</h1>
                                            <i class="fas fa-times" id="afternoonClose"></i>
                                        </div>
                                        <div class="medsWrapper">
                                            <% afternoon.forEach(e =>{%>
                                                <div class="med">
                                                    <h1 id="medName">
                                                        <%= e.name %>
                                                    </h1>
                                                    <h1 id="medTime">
                                                        <%= (e.beforeFood)?'12:00':'14:00' %>
                                                    </h1>
                                                </div>
                                                <%})%>
                                        </div>
                                    </div>
                                </div>
                                <% } %>
                                    <% if(night.length >0){%>
                                        <div class="reminder blue blue-close">
                                            <div class="pills">
                                                <img src="/images/pills.png" alt="">
                                            </div>
                                            <div class="meds">
                                                <div class="medTtileTime">
                                                    <h1>Evening</h1>
                                                    <i class="fas fa-times" id="eveningClose"></i>
                                                </div>
                                                <div class="medsWrapper">
                                                    <% morning.forEach(e =>{%>
                                                        <div class="med">
                                                            <h1 id="medName">
                                                                <%= e.name %>
                                                            </h1>
                                                            <h1 id="medTime">
                                                                <%= (e.beforeFood)?'19:00':'21:00' %>
                                                            </h1>
                                                        </div>
                                                        <%})%>
                                                </div>
                                            </div>
                                        </div>
                                        <%}%>
                </div>
    </div>


    <div id="myModal" class="modal">
        <!-- Modal content -->
        <div class="modal-content">
            <div class="modal-header">
                <span class="close">&times;</span>
                <h2>New Reminder</h2>
            </div>
            <form action="/reminder" method="POST">
                <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                <input class="sympInput" id="medName" required type="text" name="name" placeholder="Name of Medicine">
                <div class="dateWrapper">
                    <!-- <label for="start">Start Date</label> -->
                    <input class="sympInput" id="startDate" name="start" required type="text" placeholder="Start date">
                    <input class="sympInput" id="stopDate" name="end" required type="text" placeholder="Stop date">
                </div>
                <div class="radioContainer">
                    <div class="radio">
                        <input id="radio-1" name="radio" value="beforeFood" type="radio" checked>
                        <label for="radio-1" class="radio-label">Before food</label>
                    </div>

                    <div class="radio">
                        <input id="radio-2" name="radio" value="afterFood" type="radio">
                        <label for="radio-2" class="radio-label">After food</label>
                    </div>
                </div>
                <div class="checkboxContainer">
                    <input type="checkbox" id="morning" name="morning" value="morning">
                    <label for="morning">Morning</label>
                    <input type="checkbox" id="afternoon" name="afternoon" value="afternoon">
                    <label for="afternoon">Afternoon</label>
                    <input type="checkbox" id="evening" name="evening" value="evening">
                    <label for="evening">Evening</label>
                </div>
                <button id="modalAdd">Add Reminder</button>
            </form>

        </div>
    </div>

    <script src="/js/navbar.js"></script>
    <script src="/js/reminder.js"></script>
</body>

</html>